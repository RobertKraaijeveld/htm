# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.poolSelection

GET     /fight                  controllers.Application.fight

GET     /api/currentPoolId      controllers.Application.currentPoolId
GET     /api/currentRound       controllers.Application.currentRound
GET     /api/currentPool        controllers.Application.currentPool
POST    /api/fight              controllers.Application.fightUpdate
POST    /api/subscribe          controllers.Application.subscribe	
GET     /api/admin/tournaments	controllers.AdminInterface.tournaments
GET     /api/admin/round/:id    controllers.AdminInterface.round(id: Long)
GET     /api/admin/pool/:id     controllers.AdminInterface.pool(id: Long)
GET     /api/admin/fight/:id     controllers.AdminInterface.fight(id: Long)

GET     /jsroutes.js            controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /webjars/*file          controllers.WebJarAssets.at(file)