# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /api/admin/tournaments	controllers.AdminInterface.tournaments
GET     /api/admin/round/:id    controllers.AdminInterface.round(id: Long)
GET     /api/admin/pool/:id     controllers.AdminInterface.pool(id: Long)
GET     /api/admin/fight/:id     controllers.AdminInterface.fight(id: Long)
POST    /api/admin/fight/update  controllers.AdminInterface.fightUpdate
GET     /api/admin/arenas		controllers.AdminInterface.arenas
GET     /api/admin/arena/:id    controllers.AdminInterface.arena(id: Long)
GET     /api/admin/pool/:id/fight/:order    controllers.AdminInterface.poolFight(id: Long, order: Long)

GET     /jsroutes.js            controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /webjars/*file          controllers.WebJarAssets.at(file)