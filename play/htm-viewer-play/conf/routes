# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /updateFeed				controllers.Application.updateFeed

GET     /api/ping				controllers.Application.ping

POST    /api/update/:arena/:view       controllers.Application.update(arena: Long, view: String)

POST    /api/update/text/:arena/:view       controllers.Application.updateText(arena: Long, view: String)

GET     /jsroutes.js            controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /webjars/*file          controllers.WebJarAssets.at(file)